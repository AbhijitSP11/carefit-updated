<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TrainerDisplayActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardMaxElevation="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="true"
            app:barrierAllowsGoneWidgets="true"
            app:barrierMargin="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/TrainerImage"
                    android:layout_width="200dp"
                    android:fitsSystemWindows="true"
                    android:layout_height="200dp"
                    android:background="@drawable/ins"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/TrainerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trainer NAME"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="10dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/TrainerAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trainer Age"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="10dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/TrainerExperience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Therapist bio"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="10dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/TrainerFee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="10dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/TrainerRatings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/trainerDesc"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="ABOUT THE TRAINER"
            android:layout_marginTop="20dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bookBtnTrainer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Trial @ Rs.100"
            android:backgroundTint="@color/Green"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
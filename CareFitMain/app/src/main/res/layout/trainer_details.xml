<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardMaxElevation="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:cardPreventCornerOverlap="true"
            app:barrierAllowsGoneWidgets="true"
            app:barrierMargin="8dp"
            app:cardUseCompatPadding="true"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/trainerImage"
                    android:layout_width="200dp"
                    android:fitsSystemWindows="true"
                    android:layout_height="200dp"
                    android:alpha="0.9"
                    android:background="@drawable/ins"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/trainerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Therapist NAME"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="10dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/trainerAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Therapist Age"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="10dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/trainerExperience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trainer experience"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="10dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/trainerRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fee"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="10dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/trainerFee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ratings"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstOnBoardingActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="10dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Care"
            android:textColor="@color/black"
            android:fontFamily="@font/kaushan"
            android:textSize="22sp"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logonew"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fit"
            android:textColor="@color/black"
            android:fontFamily="@font/kaushan"
            android:textSize="22sp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/onboardd"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to\nCareFit Application"
        android:textSize="22sp"
        android:fontFamily="@font/lato"
        android:textColor="@color/black"
        android:padding="8dp"
        android:textAlignment="center"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personalised fitness plans and tips.\nCare fit will help you gain strength\nget in better shape and embrace\n a healthy lifestyle"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="@font/lufga_regular"
        android:textColor="@color/Grey_400"
        android:padding="8dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/GetStartedBtn"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:cornerRadius="20dp"
        android:text="Get Started"/>





</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
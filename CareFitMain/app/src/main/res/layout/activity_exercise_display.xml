<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseDisplayActivity">


<View
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#7625E8"
    tools:ignore="MissingConstraints" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:padding="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:scrollbarSize="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="8dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ExerciseDispImage"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="250dp"
                android:src="@drawable/coach"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ExerciseDispName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exercise name"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato"
                android:layout_marginTop="16dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exercise Description"
                app:fontFamily="@font/robotoregular"
                android:textColor="@color/black"
                android:fontFamily="@font/lufga_semibold"
               android:textSize="18sp"
                android:layout_marginTop="16dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/exerciseDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:fontFamily="@font/lufgalight"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:textSize="16sp"/>
        </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>